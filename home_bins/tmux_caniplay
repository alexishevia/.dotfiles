#!/bin/bash

# if 'caniplay' session exists, attach to it.
# otherwise, create it with the following windows:
# - editor: vim
# - make/test: make run-local + go test

tmux has-session -t caniplay

if [ $? != 0 ]
then
    # editor window
    tmux new -s caniplay -n editor -d
    tmux send-keys -t caniplay:editor 'cd $GOPATH/src/github.com/foxbroadcasting/cpe-canIplay' C-m
    tmux send-keys -t caniplay:editor 'git pull' C-m
    tmux send-keys -t caniplay:editor 'vim .'

    # make/test window
    tmux new-window -t caniplay -n make/test
    tmux send-keys -t caniplay:make/test 'cd $GOPATH/src/github.com/foxbroadcasting/cpe-canIplay' C-m
    tmux send-keys -t caniplay:make/test 'glide install' C-m
    tmux send-keys -t caniplay:make/test 'export AWS_PROFILE=cpe-dev1 && USE_LOCAL_APIKEYS=~/Downloads/apikeys.json onchange -i -k "**/*.go" -- make run-local'
    tmux split-window -t caniplay:make/test
    tmux send-keys -t caniplay:make/test.1 'cd $GOPATH/src/github.com/foxbroadcasting/cpe-canIplay' C-m
    tmux send-keys -t caniplay:make/test.1 'go test ./...'
fi

# select 'editor' pane
tmux select-pane -t caniplay:editor

# attach to session
tmux ls | grep attached
if [ $? == 0 ]; then
    tmux switch -t caniplay
else
    tmux attach -t caniplay
fi
