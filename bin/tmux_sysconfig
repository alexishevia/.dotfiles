#!/bin/bash

# if 'sysconfig' session exists, attach to it.
# otherwise, create it

tmux has-session -t sysconfig

if [ $? != 0 ]
then
    tmux new -s sysconfig -n editor -d
    tmux send-keys -t sysconfig:editor 'cd ~/.sysconfig' C-m
    tmux send-keys -t sysconfig:editor 'vim .'
fi

# select window 'editor'
tmux select-window -t sysconfig:editor

# attach to session
tmux attach -t sysconfig
